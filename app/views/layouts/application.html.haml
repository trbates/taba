%html
  %head
    %title Taba
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #flash
    - unless notice.blank?
      .success
        = notice
    - unless alert.blank?
      .alert
        = alert
    #menu
      %ul
        %li=link_to "Clients", admin_clients_path
        %li=link_to "Projects", admin_projects_path
        %li=link_to "Tasks", admin_tasks_path
        -# %li=link_to "Invoices", admin_invoices_path
    #content
      .container
        = yield
